{
    "compilerOptions": {
      "outDir": "./.tsbuild/",
      "sourceMap": false,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "target": "es2019",
      "module": "commonjs",
      "removeComments": true,
      "noImplicitAny": true,
      "strictPropertyInitialization": true,
      "strictNullChecks": true,
      "types": [
        "node",
        "webdriverio/async",
        "@wdio/mocha-framework",
        "expect-webdriverio"
      ]
    },
    "include": [
      "./test/**/*.ts",
      "./src/types/**/*.ts"
    ]
  }